{
    "manifest_version": 3,
    "name": "ProjectPlace Timer",
    "short_name": "PP Timer",
    "description": "ProjectPlace Time Allocation Tool",
    "homepage_url": "https://www.megyof.com/",
    "version": "0.1.0",
    "version_name": "init",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "First",
        "default_icon": "img/icon-50.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png",
        "256": "img/icon-256.png",
        "512": "img/icon-512.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Comma",
                "mac": "Command+Comma"
            }
        }
    },
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://*/*"
    ]
}
